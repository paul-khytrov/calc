try:
    a = int(input("Введіть перше число:"))
    b = int(input("Введіть друге число:"))
    print("Результат додавання дорівнює", a+b)
    print("Результат віднімання дорівнює", a-b)
    print("Результат множення дорівнює", a*b)
    if b!=0:
        print("Результат ділення дорівнює", a/b)
    else:
        print("Ділити на 0 не можна!")
except ValueError:
    print("Неправильне значення!")
